<div class="form-padrao">
<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="ui form">
    <h1>Cria quarto</h1>
    <div class="field">
      <%= form.label :availability %>
      <%= form.check_box :availability, id: :room_availability %>
    </div>
  
    <div class="field">
      <%= form.label :bed_one%>
      <%= form.number_field :bed_one, id: :room_bed_one %>
    </div>
    
    <div class="field">
      <%= form.label :bed_two%>
      <%= form.number_field :bed_two, id: :room_bed_two %>
    </div>
  
    <div class="field">
      <%= form.label :number %>
      <%= form.text_field :number, id: :room_number %>
    </div>
    
    <div class="field">
      <%= form.label :photo %>
      <%= form.file_field :photo, id: :room_photo %>
    </div>
  
    <div class="field">
      <%= form.label "Selecione o hotel" %>
      <%= form.select :hotel_id, @hotels.collect { |hotel| [hotel.name, hotel.id] }, 
      :include_blank => true %>
    </div>
    
    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
</div>