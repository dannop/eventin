    <div id="error_explanation">
      <h2><%= pluralize(federation.errors.count, "error") %> prohibited this federation from being saved:</h2>

      <ul>
      <% federation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="ui form">
  
  <div class="field">
    Nome da federação:
    <%= form.text_field :name, id: :federation_name, :class => "form-input" %>
  </div>

  <div class="field">
    <%= form.label "Selecione o Estado" %>
